<!doctype html>
<html lang="en">
  <head>
    <title><%= htmlWebpackPlugin.options.title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link type="text/plain" rel="author" href="/humans.txt" />
    <% for (var css in htmlWebpackPlugin.options.files.css) { %>
    <link href="<%= htmlWebpackPlugin.options.files.css[css] %>" rel="stylesheet">
    <% } %>
    <% for (var js in htmlWebpackPlugin.options.files.js) { %>
    <script src="<%= htmlWebpackPlugin.options.files.js[js] %>" type="text/javascript"></script>
    <% } %>
  </head>
  <body>
    <div id="root"></div>
    <% if (htmlWebpackPlugin.options.window) { %>
    <script>
    <% for (var varName in htmlWebpackPlugin.options.window) { %>
      window['<%=varName%>'] = <%= JSON.stringify(htmlWebpackPlugin.options.window[varName]) %>;
    <% } %>
    </script>
    <% } %>

  </body>
</html>
